<h3>Admin: Settings</h3>
<%=form_for @preference, url: admin_settings_path(@preference) do |f|%>
  <h4>Song Sort Order</h4>
  <p>Descending    <%= f.radio_button :song_sort_order, 'DESC', :checked => true %></p>
  <p>Ascending<%= f.radio_button :song_sort_order, 'ASC' %></p>
  <h4>Artist Sort Order</h4>
  <p>Descending<%= f.radio_button :artist_sort_order, 'DESC', :checked => true %></p>
  <p>Ascending<%= f.radio_button :artist_sort_order, 'ASC' %></p>
<%= f.submit %>
<%end%>